<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@ServerGUI.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="serverGUI.ServerPortFrame">
   <children>
      <Label layoutX="50.0" layoutY="50.0" text="Server IP:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="serverip" layoutX="130.0" layoutY="46.0" prefWidth="200.0" promptText="Enter server IP address" />
      
      <Label layoutX="50.0" layoutY="100.0" text="Server Status:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="textMessage" layoutX="50.0" layoutY="130.0" prefHeight="150.0" prefWidth="500.0" editable="false" wrapText="true" />
      
      <Label layoutX="50.0" layoutY="300.0" text="Client Connections:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtClientConnection" layoutX="180.0" layoutY="296.0" prefWidth="100.0" editable="false" text="0" />
      
      <Button fx:id="btnExit" layoutX="450.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleExit" prefWidth="100.0" text="Exit Server">
         <font>
            <Font size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>